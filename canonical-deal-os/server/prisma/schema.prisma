  omVersions        OMVersion[]
  distributions     DealDistribution[]
  listingConfig     ListingConfiguration?
  listingAgreements ListingAgreement[]
  brokerInvitations BrokerInvitation[]

  @@index([organizationId])
  @@index([status])
  @@index([listingType])
  @@index([kernelDealId])
