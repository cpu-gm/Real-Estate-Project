  createdAt         DateTime  @default(now())

  session           OnboardingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([status])
  @@index([linkType])
  @@index([matchConfidence])
}

// Verification quiz responses
model OnboardingQuizResponse {
