  @@index([eventType])
  @@index([actorId])
  @@index([occurredAt])
}

// ============================================================================
// LISTING CONFIGURATION - Marketing settings for a listing
// ============================================================================
// Broker-configured marketing options for the listing.

model ListingConfiguration {
  id                    String    @id @default(uuid())
  dealDraftId           String    @unique
  dealDraft             DealDraft @relation(fields: [dealDraftId], references: [id], onDelete: Cascade)

  // Visibility
  visibility            String    @default("PLATFORM")      // PLATFORM, INVITE_ONLY

  // Target buyers (stored as JSON strings for SQLite compatibility)
  targetBuyerTypes      String?                             // JSON array: INSTITUTIONAL, PRIVATE, REIT, FAMILY_OFFICE, 1031_EXCHANGE, OWNER_OCCUPANT
  targetInvestmentMin   Float?                              // Minimum investment size
  targetInvestmentMax   Float?                              // Maximum investment size
  targetGeographies     String?                             // JSON array: LOCAL, NATIONAL, INTERNATIONAL

  // Marketing materials
  enableOM              Boolean   @default(true)            // Generate Offering Memorandum
  enableFlyers          Boolean   @default(false)           // Create marketing flyers
  enablePropertyWebsite Boolean   @default(false)           // Create property landing page

  // Timeline
  offerDeadline         DateTime?                           // Deadline for offers
  listingDuration       Int?                                // Duration in days
  openHouseDates        String?                             // JSON array of ISO date strings

  // Configured by
  configuredBy          String?                             // User ID who configured
  configuredByName      String?

  // Timestamps
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([dealDraftId])
  @@index([visibility])
}

// ============================================================================
// LISTING AGREEMENT - Formalizes seller-broker relationship
// ============================================================================
// Defines the legal relationship between seller and broker for a listing.
// Required before broker can market the property.

model ListingAgreement {
  id                String    @id @default(uuid())
  dealDraftId       String
  dealDraft         DealDraft @relation(fields: [dealDraftId], references: [id], onDelete: Cascade)

  // Agreement type - determines commission obligations
  agreementType     String                              // EXCLUSIVE_RIGHT_TO_SELL, EXCLUSIVE_AGENCY, OPEN

  // Parties
  sellerUserId      String                              // GP who owns the property
  seller            AuthUser  @relation("SellerAgreements", fields: [sellerUserId], references: [id])
  sellerEntityName  String?                             // Legal entity name if different from user

  brokerUserId      String                              // Broker representing seller
  broker            AuthUser  @relation("BrokerAgreements", fields: [brokerUserId], references: [id])
  brokerageId       String?                             // Brokerage firm (if applicable)

  // Financial terms
  commissionPercent Float?                              // Commission as percentage (e.g., 6.0)
  commissionFlat    Float?                              // Or flat fee (mutually exclusive with percent)
  listingPriceMin   Float?                              // Listing price range min
  listingPriceMax   Float?                              // Listing price range max

  // Term dates
  termStartDate     DateTime                            // Agreement effective date
  termEndDate       DateTime                            // Agreement expiration

  // Confirmation workflow - both parties must confirm
  sellerConfirmedAt DateTime?                           // When seller accepted terms
  sellerConfirmedIp String?                             // IP address for ESIGN compliance
  brokerConfirmedAt DateTime?                           // When broker accepted terms
  brokerConfirmedIp String?                             // IP address for ESIGN compliance
  status            String    @default("DRAFT")         // DRAFT, PENDING_SELLER, PENDING_BROKER, ACTIVE, EXPIRED, TERMINATED

  // Termination fields
  terminatedAt      DateTime?                           // When agreement was terminated
  terminatedBy      String?                             // User ID who terminated
  terminationReason String?                             // Reason for termination

  // Generated document
  documentUrl       String?                             // URL to signed PDF

  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  commissionAgreements CommissionAgreement[]

  @@index([dealDraftId])
  @@index([sellerUserId])
  @@index([brokerUserId])
  @@index([status])
  @@index([agreementType])
}

// ============================================================================
// COMMISSION AGREEMENT - Tracks commission terms and payout
// ============================================================================
// Detailed commission tracking for when deal closes.
// Both parties must confirm terms.

model CommissionAgreement {
  id                  String    @id @default(uuid())
  listingAgreementId  String
  listingAgreement    ListingAgreement @relation(fields: [listingAgreementId], references: [id], onDelete: Cascade)

  // Commission split (can differ from listing agreement if negotiated)
  sellerPaysPercent   Float?                            // Percent paid by seller
  buyerPaysPercent    Float?                            // Percent paid by buyer (if any)
  flatFee             Float?                            // Or flat fee

  // Confirmation - all parties must confirm
  sellerConfirmedAt   DateTime?
  brokerConfirmedAt   DateTime?
  buyerConfirmedAt    DateTime?                         // If buyer pays part of commission

  // Payout tracking
  closingDate         DateTime?                         // When deal closed
  salePrice           Float?                            // Final sale price
  payoutAmount        Float?                            // Calculated commission
  payoutStatus        String?                           // PENDING, PAID, DISPUTED
  payoutDate          DateTime?

  // Timestamps
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([listingAgreementId])
  @@index([payoutStatus])
}

// ============================================================================
// BROKER INVITATION - Tracks broker invitations from sellers
// ============================================================================
// When a seller invites a broker to represent their property.

model BrokerInvitation {
  id                String    @id @default(uuid())
  dealDraftId       String?                             // If for a specific listing
  dealDraft         DealDraft? @relation(fields: [dealDraftId], references: [id])
  organizationId    String                              // Seller's organization

  // Inviter (seller)
  invitedBy         String                              // User ID of seller/GP
  invitedByName     String
  invitedByEmail    String

  // Invitee (broker)
  brokerEmail       String                              // Email to invite
  brokerName        String?                             // If known
  brokerFirmName    String?                             // Brokerage firm name

  // Status
  status            String    @default("PENDING")       // PENDING, ACCEPTED, DECLINED, EXPIRED
  token             String    @unique                   // Unique token for invitation link
  expiresAt         DateTime                            // Invitation expiration

  // Response
  respondedAt       DateTime?
  respondedByUserId String?                             // AuthUser ID if broker already had account

  // Commission terms proposed by seller
  commissionType        String?                         // PERCENTAGE, FLAT_FEE, TIERED, CUSTOM
  commissionRate        Float?                          // e.g., 0.03 for 3%
  commissionAmount      Float?                          // for flat fee
  commissionNotes       String?                         // additional terms/conditions

  // Negotiation status
  negotiationStatus     String    @default("NONE")      // NONE, PENDING, AGREED, NEGOTIATE_LATER

  // Relation to negotiations
  negotiations          CommissionNegotiation[]

  // Timestamps
  sentAt            DateTime  @default(now())

  @@index([brokerEmail])
  @@index([status])
  @@index([token])
  @@index([dealDraftId])
  @@index([negotiationStatus])
}

// ============================================================================
// COMMISSION NEGOTIATION - Counter-offers between seller and broker
// ============================================================================
// Tracks the back-and-forth negotiation of commission terms

model CommissionNegotiation {
  id                    String    @id @default(uuid())
  invitationId          String
  invitation            BrokerInvitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)

  // Who proposed this offer
  proposedBy            String                              // User ID
  proposedByRole        String                              // SELLER or BROKER

  // Proposed terms
  commissionType        String                              // PERCENTAGE, FLAT_FEE, TIERED, CUSTOM
  commissionRate        Float?                              // e.g., 0.03 for 3%
  commissionAmount      Float?                              // for flat fee
  notes                 String?                             // additional terms

  // Response
  status                String    @default("PENDING")       // PENDING, ACCEPTED, COUNTERED, REJECTED
  respondedAt           DateTime?
  respondedBy           String?                             // User ID who responded

  // Negotiation round (1, 2, 3, etc.)
  round                 Int       @default(1)

  createdAt             DateTime  @default(now())

  @@index([invitationId])
  @@index([status])
  @@index([proposedBy])
}

// ============================================================================
// CONTACT - Unified contact/vendor database
// ============================================================================
// Stores all external parties: brokers, lenders, attorneys, appraisers, etc.
