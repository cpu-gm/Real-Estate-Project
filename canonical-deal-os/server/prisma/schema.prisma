  id          String   @id @default(uuid())
  type        String   // RATE_LIMIT_CHECK, RATE_LIMIT_EXCEEDED, MAGIC_LINK_CREATED,
                       // LOGIN_FAILED, LOGIN_SUCCESS, IDOR_ATTEMPT, SESSION_INVALIDATED
