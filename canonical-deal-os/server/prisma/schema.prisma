  queriedBy       String
  queriedByName   String?
  queriedAt       DateTime  @default(now())

  // Relations
  vault           LegalVault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@index([vaultId])
  @@index([organizationId])
  @@index([queriedAt])
