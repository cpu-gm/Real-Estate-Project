// OAuth connections (persistent across sessions)
model OAuthConnection {
  id                String    @id @default(uuid())
  organizationId    String
  userId            String

  provider          String                            // google, microsoft, salesforce, hubspot, yardi, appfolio
  accountId         String?
  accountEmail      String?
  accountName       String?

  // Tokens (should be encrypted in production)
  accessToken       String?
  refreshToken      String?
  tokenExpiresAt    DateTime?
  scopes            String?                           // JSON array of granted scopes

