// ============================================================================
// CONTACT CREDENTIAL - Licenses, certifications, insurance
// ============================================================================
// Track credentials, licenses, and insurance for vendors.
// Supports expiration tracking and verification.

model ContactCredential {
  id                  String    @id @default(uuid())
  contactId           String

  // Credential Details
  credentialType      String                              // LICENSE, CERTIFICATION, INSURANCE, BOND
  credentialName      String                              // "RE Broker License", "E&O Insurance"
  issuingAuthority    String?                             // "California DRE"
  credentialNumber    String?

