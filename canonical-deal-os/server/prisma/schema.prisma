// =============================================================================
// GP COUNSEL / LEGAL MATTER TRACKING (Phase 1)
// =============================================================================

model LegalMatter {
  id              String    @id @default(uuid())
  organizationId  String

  // Matter identity
  matterNumber    String?                       // Auto-generated: ORG-YYYY-NNNN
  title           String
  description     String?

  // Type classification
  matterType      String                        // DEAL_SPECIFIC, ENTITY_CORPORATE, INVESTOR_RELATIONS, ONGOING_RECURRING
  subType         String?                       // due_diligence, closing, amendment, llc_formation, etc.

  // Related entities (for deal integration)
  dealId          String?
  dealName        String?                       // Denormalized for display
  entityId        String?
  lpActorId       String?

  // Kanban workflow
  stage           String    @default("NEW")     // NEW, IN_PROGRESS, COMPLETE
  priority        String    @default("NORMAL")  // LOW, NORMAL, HIGH, URGENT

  // Deadline tracking (for auto-aging)
  dueDate         DateTime?
  targetDate      DateTime?
  stageEnteredAt  DateTime  @default(now())     // For aging calculation

  // Assignment
  assignedTo      String?
  assignedToName  String?
  assignedBy      String?
  assignedByName  String?
  assignedAt      DateTime?

  // GC oversight
  gcReviewRequired  Boolean   @default(false)
  gcApprovalStatus  String?                     // PENDING, APPROVED, REJECTED

  // Sign-off tracking
  signOffType     String?                       // SIMPLE, CHECKLIST, CONDITIONAL
  signOffStatus   String?                       // PENDING, APPROVED, REJECTED
  signOffBy       String?
  signOffByName   String?
  signOffAt       DateTime?
  signOffConditions String?                     // JSON array for conditional approvals

  // Privilege marker (simple, no access control)
  isPrivileged    Boolean   @default(false)

  // Audit
  createdBy       String
  createdByName   String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  closedAt        DateTime?

  // Relations
  activities      LegalMatterActivity[]
  documents       LegalMatterDocument[]

  @@index([organizationId, stage])
  @@index([dealId])
  @@index([dueDate])
  @@index([assignedTo])
  @@index([matterType])
}

model LegalMatterActivity {
  id              String    @id @default(uuid())
  matterId        String

  // Activity type
  activityType    String    // COMMENT, STATUS_CHANGE, ASSIGNMENT, SIGN_OFF, PRIORITY_CHANGE, AI_ANALYSIS

  // Content
  content         String?                       // Comment text or change description
  previousValue   String?                       // For change tracking
  newValue        String?                       // For change tracking
  metadata        String?                       // JSON for additional data

  // Actor
  createdBy       String
  createdByName   String?
  createdAt       DateTime  @default(now())

  // Relations
  matter          LegalMatter @relation(fields: [matterId], references: [id], onDelete: Cascade)

  @@index([matterId, createdAt])
  @@index([activityType])
}

// =============================================================================
// LEGAL DOCUMENT MANAGEMENT (Phase 2)
// =============================================================================

model LegalMatterDocument {
  id              String    @id @default(uuid())
  matterId        String
  organizationId  String

  // Document reference
  storageKey      String                          // Path to stored file
  filename        String
  mimeType        String
  sizeBytes       Int
  pageCount       Int?

  // Classification
  documentType    String                          // CONTRACT, LEASE, AMENDMENT, SIDE_LETTER, OPERATING_AGREEMENT, etc.
  documentSubType String?

  // Lifecycle
  status          String    @default("UPLOADED")  // UPLOADED, ANALYZING, ANALYZED, FAILED
  uploadedBy      String
  uploadedByName  String?
  uploadedAt      DateTime  @default(now())

  // Document metadata
  documentDate    DateTime?                       // Date on the document itself
  effectiveDate   DateTime?
  expirationDate  DateTime?
  parties         String?                         // JSON array of party names

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  matter          LegalMatter @relation(fields: [matterId], references: [id], onDelete: Cascade)
  analyses        LegalDocumentAnalysis[]
  vaultDocuments  LegalVaultDocument[]

  @@index([matterId])
  @@index([organizationId])
  @@index([documentType])
  @@index([status])
}

model LegalDocumentAnalysis {
  id              String    @id @default(uuid())
  documentId      String
  organizationId  String

  // Analysis configuration
  analysisType    String    @default("FULL")      // FULL, SUMMARY_ONLY, CLAUSE_CHECK
  aiModel         String
  aiPromptVersion String
  aiLatencyMs     Int?

  // Core results
  extractedTerms  String                          // JSON: { parties, dates, amounts, ... }
  summary         String                          // Markdown executive summary
  riskScore       Int                             // 1-10
  riskExplanation String

  // Clause analysis (JSON)
  identifiedClauses   String?                     // [{ type, text, pageNumber, ... }]
  missingClauses      String?                     // [{ clause, severity, suggestion }]
  unusualClauses      String?                     // [{ clause, concern, comparison }]

  // Playbook results (if applicable)
  playbookId          String?
  playbookViolations  String?                     // [{ ruleId, clause, issue, severity }]
  playbookScore       Int?                        // 0-100 compliance score

  // Status
  status          String    @default("COMPLETED") // COMPLETED, PARTIAL, FAILED
  errorMessage    String?
  overallConfidence Float   @default(0.8)

  analyzedAt      DateTime  @default(now())
  analyzedBy      String                          // userId or "SYSTEM"

  // Relations
  document        LegalMatterDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  playbook        ContractPlaybook? @relation(fields: [playbookId], references: [id])

  @@index([documentId])
  @@index([organizationId])
  @@index([riskScore])
  @@index([playbookId])
}

// =============================================================================
// LEGAL VAULT (Bulk Document Container)
// =============================================================================

model LegalVault {
  id              String    @id @default(uuid())
  organizationId  String
  matterId        String?                         // Optional link to matter

  // Vault metadata
  name            String
  description     String?
  vaultType       String    @default("GENERAL")   // GENERAL, DUE_DILIGENCE, LEASE_PORTFOLIO, CLOSING

