// White-glove data import experience for new organizations.
// Supports multi-channel intake (files, OAuth, email) with AI extraction.

model OnboardingSession {
  id                  String    @id @default(uuid())
  organizationId      String

  // Session status workflow
  status              String    @default("SETUP")     // SETUP, UPLOADING, PROCESSING, REVIEW, TEAM_REVIEW, READY, LIVE
  tier                String    @default("SELF_SERVICE")  // SELF_SERVICE, WHITE_GLOVE

  // Category configuration (JSON arrays)
  selectedCategories  String?                         // ["deals", "contacts", "properties"]
  categoryPriorities  String?                         // ["deals", "contacts"] - processing order
  historicalOption    String    @default("active")    // active, recent, all

  // Progress tracking
  totalRecords        Int       @default(0)
  processedRecords    Int       @default(0)
  verifiedRecords     Int       @default(0)

  // Timing
  estimatedCompletionAt DateTime?
  startedAt           DateTime?
  completedAt         DateTime?
  goLiveAt            DateTime?

  // SLA tracking
  slaDeadline         DateTime?
  slaBreached         Boolean   @default(false)

  // Team assignment (for white-glove)
  assignedTo          String?                         // AuthUser ID of ops team member
  assignedToName      String?

  // Audit
  createdBy           String
  createdByName       String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  intakeSources       OnboardingIntakeSource[]
  claims              OnboardingClaim[]
  conflicts           OnboardingConflict[]
  dataLinks           OnboardingDataLink[]
  quizResponses       OnboardingQuizResponse[]
  adminNotes          OnboardingAdminNote[]
  activities          OnboardingActivity[]
  oauthConnections    OnboardingOAuthConnection[]
  emailForwarders     OnboardingEmailForwarder[]

  @@index([organizationId])
  @@index([status])
  @@index([tier])
  @@index([assignedTo])
  @@index([slaDeadline])
  @@index([createdAt])
}

// Intake sources - files, OAuth connections, emails
model OnboardingIntakeSource {
  id                String    @id @default(uuid())
  sessionId         String

  sourceType        String                            // FILE, OAUTH_GOOGLE, OAUTH_MICROSOFT, OAUTH_CRM, EMAIL

  // For FILE type
  fileName          String?
  fileSize          Int?
  mimeType          String?
  storageKey        String?                           // S3/storage key for file
  originalPath      String?                           // Original path if from folder upload

  // For OAUTH type
  oauthProvider     String?                           // google, microsoft, salesforce, hubspot, yardi, appfolio
  oauthAccountId    String?
  oauthAccountEmail String?
  lastSyncAt        DateTime?
  syncStatus        String?

  // For EMAIL type
  emailAddress      String?
  emailMessageId    String?
  emailSubject      String?
  emailFrom         String?

  // Processing status
  status            String    @default("PENDING")     // PENDING, PROCESSING, COMPLETED, FAILED
  processedAt       DateTime?
  errorMessage      String?

  // Results
  recordsExtracted  Int       @default(0)
  claimsGenerated   Int       @default(0)

  createdAt         DateTime  @default(now())

  session           OnboardingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  claims            OnboardingClaim[]

  @@index([sessionId])
  @@index([sourceType])
  @@index([status])
}

// Extracted claims with full provenance
model OnboardingClaim {
  id                String    @id @default(uuid())
  sessionId         String
  sourceId          String?                           // OnboardingIntakeSource reference

  // Category and record identification
  category          String                            // DEAL, CONTACT, PROPERTY, DOCUMENT, LP_RECORD, FINANCIAL
  recordType        String?                           // Sub-type within category
  recordKey         String?                           // External ID or generated key for grouping
  recordTitle       String?                           // Display title for the record

  // Field data
  fieldPath         String                            // e.g., "propertyName", "address.city"
  fieldLabel        String?                           // Human-readable label
  value             String?                           // Raw value
  displayValue      String?                           // Formatted display value
  dataType          String?                           // string, number, date, currency, boolean, json

  // Source provenance
  sourceType        String                            // FILE, OAUTH, EMAIL, AI_INFERRED
  documentName      String?
  pageNumber        Int?
  cellReference     String?                           // e.g., "Sheet1!B5"
  textSnippet       String?                           // Surrounding text for context

  // AI extraction metadata
  confidence        Float     @default(0.5)
  extractionMethod  String?                           // REGEX, LLM, OCR, MANUAL, RULE_BASED
  aiRationale       String?                           // AI explanation for extraction
  aiModelVersion    String?                           // Which model version extracted this

  // Verification status
  status            String    @default("UNVERIFIED")  // UNVERIFIED, VERIFIED, REJECTED, CONFLICTED
  verifiedAt        DateTime?
  verifiedBy        String?
  verifiedByName    String?
  correctedValue    String?                           // User-corrected value
  rejectionReason   String?

  // Sensitive data handling
  isSensitive       Boolean   @default(false)
  sensitiveType     String?                           // SSN, BANK_ACCOUNT, EIN, etc.
  encryptedValue    String?                           // Encrypted version if sensitive

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  session           OnboardingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  source            OnboardingIntakeSource? @relation(fields: [sourceId], references: [id])
  conflictsA        OnboardingConflict[] @relation("ClaimA")
  conflictsB        OnboardingConflict[] @relation("ClaimB")

  @@index([sessionId])
  @@index([sourceId])
  @@index([category])
  @@index([recordKey])
  @@index([status])
  @@index([confidence])
}

// Data conflicts between sources
model OnboardingConflict {
  id                String    @id @default(uuid())
  sessionId         String

  // What field is conflicting
  recordKey         String?
  fieldPath         String
  fieldLabel        String?

  // Conflicting claims
  claimAId          String
  claimBId          String?

  // Conflict details
  valueA            String?
  valueB            String?
  sourceA           String?                           // Description of source A
  sourceB           String?                           // Description of source B

  // Resolution
  status            String    @default("UNRESOLVED")  // UNRESOLVED, AI_SUGGESTED, USER_RESOLVED, ADMIN_RESOLVED
  resolutionMethod  String?                           // CHOSE_A, CHOSE_B, AVERAGED, MANUAL_OVERRIDE
  resolvedValue     String?
  resolvedBy        String?
  resolvedByName    String?
  resolvedAt        DateTime?

  // AI suggestion
  aiSuggestedMethod String?
  aiSuggestedValue  String?
  aiConfidence      Float?
  aiRationale       String?

  createdAt         DateTime  @default(now())

  session           OnboardingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  claimA            OnboardingClaim @relation("ClaimA", fields: [claimAId], references: [id])
  claimB            OnboardingClaim? @relation("ClaimB", fields: [claimBId], references: [id])

  @@index([sessionId])
  @@index([status])
  @@index([recordKey])
}

// Discovered data links (the "wow factor")
model OnboardingDataLink {
  id                String    @id @default(uuid())
  sessionId         String

  // Link details
  linkType          String                            // CONTACT_DEAL, CONTACT_ENTITY, LP_DEAL, DEAL_PROPERTY, DUPLICATE_ENTITY

