  previousEventHash String?                          // Hash of previous event
  eventHash         String                           // SHA-256(id + eventType + eventData + occurredAt + previousEventHash)

  @@index([dealId, sequenceNumber])
  @@index([dealId, eventType])
  @@index([occurredAt])
