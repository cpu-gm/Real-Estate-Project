  status            String    @default("CONNECTED")   // CONNECTED, DISCONNECTED, EXPIRED, ERROR
  connectedAt       DateTime  @default(now())
  disconnectedAt    DateTime?

  @@unique([organizationId, provider, accountId])
  @@index([organizationId])
  @@index([provider])
  @@index([status])
}

// Dedicated email inbox for forwarding
model OnboardingEmailInbox {
  id                String    @id @default(uuid())
  organizationId    String    @unique

  emailAddress      String    @unique                 // e.g., import-abc123@import.canonical.com

  // Stats
  messagesReceived  Int       @default(0)
  lastReceivedAt    DateTime?

