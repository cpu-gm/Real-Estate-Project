  isPerson            Boolean       @default(true)        // true = person, false = company

  // Identity
  name                String                              // Person name or company name
  companyName         String?                             // Company they work for (if person)
  title               String?                             // Job title

  // Contact Info
  email               String?
  phone               String?
  phoneAlt            String?
  address             String?                             // JSON: { street, city, state, zip }
  website             String?

