  documentId          String?                             // Uploaded proof artifact ID
  verifiedAt          DateTime?
  verifiedBy          String?

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  contact             Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

